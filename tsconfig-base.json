{
  "exclude": ["./test","node_modules"],
  "include": ["src/**/*.ts", "src/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "inlineSources": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "noImplicitAny": false,
  }
}